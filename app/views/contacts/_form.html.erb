<head>
  <link rel="stylesheet" href="flashy_cards.css">
</head>
<body>
 
  <div class="col-4" id="<%= dom_id(contact) %>_form">
    
    <%= form_with(model: contact, local: false) do |form| %>
      <% if contact.errors.any? %>
        <div id="error_explanation">
          <ul class="list-unstyled">
            <% contact.errors.each do |error| %>
              <li>
                <div class="alert alert-danger" role="alert">
                  <%= error.full_message %>
                </div>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="card l-bg-contacts">
        <div class="card-header">
          <div class="field">
            <%= form.label :image %>
            <%= form.text_field :image, class: "form-control" %>
          </div>
          <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex">
              <div class="d-flex flex-column">
                <div class="field">
                  <%= form.label :name %>
                  <%= form.text_field :name, class: "form-control" %>
                </div>
                <div class="field">
                  <%= form.label :organization %>
                  <%= form.text_field :organization, class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="ml-1">
              <div class="field">
                <%= form.label :facebook_url %>
                <%= form.text_field :facebook_url, class: "form-control" %>
              </div>
              <div class="field">
                <%= form.label :instagram_url %>
                <%= form.text_field :instagram_url, class: "form-control" %>
              </div>
            </div>
          </div>
        </div>
        <div class="card-body">

            <div class="field mt-2">
              <%= form.label :preferred_method %>
              <%= form.select :preferred_method, ["text", "text (work)", "phone call", "phone call (work)" ,"email", "facebook", "instagram"], class: "form-control ml-1" %>
            </div>

            
            <div class="field mt-2">
              <i class="fas fa-home"></i> <%= form.label :personal_number %>
              <%= form.text_field :personal_number, class: "form-control" %>
            </div>
            
            
            <div class="field mt-2">
              <i class="fas fa-briefcase"></i> <%= form.label :work_number %>
              <%= form.text_field :work_number, class: "form-control" %>
            </div>
            
            <div class="field mt-2">
              <i class="fas fa-envelope"></i> <%= form.label :email %>
              <%= form.text_field :email, class: "form-control" %>
            </div>
            
            <div class="actions mt-2">
              <%= form.submit %>
            </div>
        </div>
        <div class="card-footer mt-0 pt-0">
          <% if contact.updated_at.present?%>
            <p class="card-text align-items-center"><small class="text-light">Last updated: <%= contact.updated_at.to_date %></small></p>
          <% end %>
        </div>
      </div>
    <% end %>
    
  </div>

</body>
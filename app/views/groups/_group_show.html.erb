
<div class="card">
  <div class = "card-header">
    <div class="d-flex justify-content-between align-items-center">
      <div><strong><%= link_to group.name, group_path(group), class: "text-dark" %></strong></div>
      <div>
        <strong><%= pluralize(group.members_count, "Members") %></strong>
      </div>
    </div>
  </div>
  <div class="card-footer mt-0 pt-0">
    <p class="card-text align-items-center"><small>Last updated: <%= group.updated_at.to_date %></small></p>
  </div>
</div>


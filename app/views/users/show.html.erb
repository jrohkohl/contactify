<head>
  <link rel="stylesheet" href="flashy_cards.css">
</head>

<body>
  <h1>Welcome</h1>
  <p class="fs-5 col-md-8">Quickly and easily manage your contacts below.</p>

  <div class="mb-5">
    <button type="button" class="btn btn-lg card l-bg-green">Add Contacts</button>
  </div>

  <hr class="col-md-2 mb-5">
  <div class="row">
    <div class="col-md-8">
      
      <div class="row ml-2">
        <div>
          <h4><i class="far fa-id-card"></i> Recently Added Contacts</h4>
          <p> Below are your most recently created contacts:</p>
        </div>
      </div>  

      <div class = "row mt-3">
        <% @user.contacts.by_created_date.first(12).each do |contact| %>
          <div class = "col-6">
            <%= render "contacts/contact", contact: contact %>
          </div>
        <% end %>
      </div>
      <div class = "container">
        <button type="button" class="btn btn-outline-primary btn-sm mb-1">
          <%= link_to 'Add Contact', new_contact_path %>
        </button>
      </div>
      <div class="container mt-2">
        <%= link_to "Go to All Contacts", contacts_path(@user.username) %>
      </div>
    </div>

    <div class="col-md-4">
      <div class="row ml-2">
        <div>
          <h4><i class="fas fa-user-friends"></i> Groups</h4>
          <p> Below are your most recently created groups:</p>
        </div>
      </div>
      
      <div class = "mt-3">
        <% @user.groups.by_created_date.first(12).each_with_index do |group, number| %>
          <%= render "groups/group_show", group: group, number: number %>
        <% end %>
      </div>


      <button type="button" class="btn btn-outline-primary btn-sm mb-1">
        <%= link_to 'Add Group', new_group_path %>
      </button>
          
        
      <div class="container mt-2">
        <%= link_to "Go to All Groups", groups_path(@user.username) %>
      </div>
      
    </div>
  </div>



</body>

  






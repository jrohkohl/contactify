<body>
  
  <div class="col-4" id="<%= dom_id(contact)%>">
    <div class="card l-bg-contacts">
      <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
          <div class="d-flex">
            <% if contact.picture.present? %>
              <%=image_tag contact.picture.variant(resize_to_fill: [45, 45]), class: "rounded-circle", :style => "border: 1px solid white; padding: 3px;" %>
            <% else %>
              <%= image_tag "picture_placeholder.jpg", class: "rounded-circle", width: 45, height: 45, :style => "border: 1px solid white; padding: 3px;" %>
            <% end %>
            <div class="d-flex flex-column ml-2">
              <strong><%= link_to contact.name, contact_path(contact), class: "text-white" %></strong>
              <small class = "text-white"><%= contact.organization %></small>
            </div>
          </div>
          <div>
            <% if contact.facebook_url.present? %>
              <a href="http://<%= contact.facebook_url %>"><i class="fab fa-facebook fa-lg" style="color:white"></i></a> 
            <% end %>

            <% if contact.instagram_url.present? %>
              <a href="http://<%= contact.instagram_url %>"><i class="fab fa-instagram fa-lg" style="color:white"></i></a>
            <% end %>
          </div>
        </div>
      </div>
      <div class="card-body mt-1 mb-1 pt-1 pb-2">
          <div>Prefers <%=contact.preferred_method%></div>
          <div><i class="fas fa-home"></i> : <%=Phonelib.parse(contact.personal_number).national%></div>
          <div><i class="fas fa-briefcase"></i> : <%=Phonelib.parse(contact.work_number).national%></div>
          <div><i class="fas fa-envelope"></i> : <%=contact.email%></div>
      </div>
      <div class="card-footer mt-0 pt-0">
        <div class="d-flex justify-content-between align-items-center">
          <div class="card-text text-white">
            <%= link_to edit_contact_path(contact), class: "text-white", remote: true do %>
              <i class="fas fa-user-edit fa-xs" style="color:white"></i>
            <% end %> 
            <small>  Last updated: <%= contact.updated_at.to_date %></small>
          </div>
          <div>
            <%= link_to contact, method: :delete, class: "text-white", remote: true do %>
              <i class="fas fa-user-minus fa-xs" style="color:white"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div> 
  </div>
</body>


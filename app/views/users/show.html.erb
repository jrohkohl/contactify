<head>
  <link rel="stylesheet" href="flashy_cards.css">
</head>

<body>
  <h1>Welcome</h1>
  <p class="fs-5 col-md-8">Quickly and easily manage your contacts below.</p>

  <div class="mb-5">
    <button type="button" class="btn btn-lg card l-bg-green">Add Contacts</button>
  </div>

  <hr class="col-md-2 mb-5">
  <div class="row">
    <div class="col-md-8">
      
      <div class="row ml-2">
        <div>
          <h4><i class="far fa-id-card"></i> Recently Added Contacts</h4>
          <p> Below are your last 12 added contacts:</p>
        </div>
      </div>  

      <div class = "row mt-3">
        <% @user.contacts.by_created_date.first(12).each do |contact| %>
          <div class = "col-6">
            <%= render "contacts/contact_show", contact: contact %>
          </div>
        <% end %>
      </div>
      <div class = "container">
        <button type="button" class="btn btn-outline-primary btn-sm mb-1">
          <%= link_to 'Add Contact', new_contact_path %>
        </button>
      </div>
      <div class="container mt-2">
        <%= link_to "Go to All Contacts", contacts_path(@user.username) %>
      </div>
    </div>

    <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h4><i class="fas fa-user-friends"></i> Groups</h4>
            <p class = "card-text">Below are your last 10 added groups</p>
          </div>
          <div class = "card-body">
            <table class="table table-sm table-striped table-hover">
              <thead>
                <tr>
                  <th>Name</th>
                  <th># of Members</th>
                </tr>
              </thead>
              <tbody>
                <% @user.groups.by_created_date.first(10).each do |group| %>
                  <%= render "groups/group_show", group: group %>
                <% end %>
              </tbody>
            </table>
            <button type="button" class="btn btn-outline-primary btn-sm mb-1">
              <%= link_to 'Add Group', new_group_path %>
            </button>
          </div>
        </div>
        <div class="container mt-2">
          <%= link_to "Go to All Groups", groups_path(@user.username) %>
        </div>
      </div>
    </div>
  </div>



</body>

  






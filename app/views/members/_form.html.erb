<div id="new-member-form-<%=dom_id(@member.group)%>">
  <%= form_with(model: member, local: false) do |form| %>
    <% if member.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

        <ul>
          <% member.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="field">
      <%= form.hidden_field :group_id %>
    </div>

    <div class = "d-flex align-items-center mt-3">
      <div>
        <div class = "field">
          <%= form.select(:contact_id, @contact_options)%>
        </div>
      </div>
      
      <div class="actions">
        <%= form.submit "Add to Group", class: "btn btn-outline-primary btn-sm btn-block ml-3" %>
      </div>

    </div>
  <% end %>
</div>

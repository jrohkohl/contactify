<head>
  <link rel="stylesheet" href="flashy_cards.css">
</head>
<body>
  <div>
    <h4 class="display-4"><i class="far fa-id-card"></i> My Contacts</h4>
  </div>
  
  <hr>

  <div class="row">
    <button type="button" class="btn btn-outline-primary btn-sm">
      <%= link_to 'Add Contact', new_contact_path, remote: true %>
    </button>
  </div>




  <div class = "row mt-3">
    <% current_user.contacts.by_created_date.each do |contact| %>
      <div class = "col-4">
        <%= render "contacts/contact_all", contact: contact %>
      </div>
    <% end %>
  </div>


</body>




